{
    "compilerOptions": {
        "lib": ["DOM"],
        "target": "ESNext",
        "jsx": "react",

        "module": "ESNext",
        "baseUrl": "src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": true
    }
}
